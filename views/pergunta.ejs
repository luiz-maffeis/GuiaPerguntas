<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container" id="formulario-pergunta">
        <div class="card">
            <div class="card-header">
                <h3><%= pergunta.titulo %></h3>
                <p><%= pergunta.descricao %> </p>
            </div>
            <div class="card-body">
                <form action="/responder" method="POST">
                    <h3>Responda a pergunta:</h3>
                    <textarea name="corpo" id="corpo" cols="30" rows="5" class="form-control" placeholder="Responda aqui"></textarea>
                    <br>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
            </div>
            
        </div>
        <br>
        <h3>Respostas</h3>
        <% respostas.forEach((resp) => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resp.corpo  %></p>
                </div>
            </div>  
        <% } ) %> 

    </div>
</body>
<%- include ('partials/footer.ejs') %>
